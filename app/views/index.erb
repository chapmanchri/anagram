<div class="inside-container">
	<div class="get-anagram">
		<h2>Enter your word:</h2>
		<h3>Three letter words only please...</h3>
		<div class="error-message">
			<%= @error %>
		</div>
			<div class="form-box">
				<form action="/" method="post" class="form">
					<div class="form-space">
						<label for="word" style="color: gray">Enter a word:</label>
						<input type="text" name="word" value="<%="#{@word}" %>"
					</div>
					<div class="form-space">
						<input type="submit" class="btn" value="Make it happen">
					</div>
				</form>
			</div>
	</div>
	<div class="page-bottom">
	</div>
</div>